<IfModule mod_rewrite.c>
   RewriteEngine on
   RewriteBase /

   # Force SSL Redirection
   RewriteCond %{SERVER_PORT} !=80
   RewriteRule ^/?(.*) https://%(SERVER_NAME)/$1 [R=301,L]
   
   # Cake routing
   RewriteRule    ^$ app/webroot/    [L]
   RewriteRule    (.*) app/webroot/$1 [L]
</IfModule>